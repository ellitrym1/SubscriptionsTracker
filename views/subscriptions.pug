include header 

.subscriptions
    .current-user 
        .user= name
        a(class="logout-btn" href="/logout") LOG OUT 
    .subscriptions-modal 
        .subscriptions-modal-header 
            h1 SUBSCRIPTIONS
            a(class="subscription-add-btn" href="/subscriptions/add") ADD
        if subscriptions.length != 0
            table 
                tr 
                    th NAME 
                    th DATE 
                    th FREQUENCY
                    th AMOUNT 
                each subscription in subscriptions
                    tr(class=`subscription-row`) 
                        form(id="subscription-form" action=`/subscriptions/delete`, method="post")
                            td(style="display:none")
                                input(type="text", name="name", value=`${subscription.name}` id="subscription-name")
                            td 
                                span= subscription.name
                            td 
                                span= subscription.paymentDate
                            td 
                                span= subscription.paymentFrequency  
                            td 
                                span= subscription.amount 
                            td
                                .form-btn(class="delete-btn") DELETE
                            td
                                .form-btn(class="edit-btn") EDIT
   
        else 
            h2 NO ACTIVE SUBSCRIPTION

.popup-modal-add-bg 
    .popup-modal-add      
        div ADD 
        button.popup-btn ADD
        span.popup-close Close

.popup-modal-edit-bg 
    .popup-modal-edit       
        div EDIT
        button.popup-btn EDIT
        span.popup-close Close

.popup-modal-delete-bg 
    .popup-modal-delete      
        div Are you sure?
        button.popup-btn(form="subscription-form") DELETE
        span.popup-close Close


