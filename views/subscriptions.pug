include header 

.subscriptions
    .current-user 
        .user= name
        a(class="logout-btn" href="/logout") LOG OUT 
    .subscriptions-modal 
        .subscriptions-modal-header 
            h1 SUBSCRIPTIONS
            a(class="subscription-add-btn" href="/subscriptions/add") ADD
        if subscriptions.length != 0
            table 
                tr 
                    th NAME 
                    th PAYMENT DATE 
                    th AMOUNT 
                each subscription in subscriptions 
                    tr(class="subscription-row") 
                        th= subscription.name 
                        th= subscription.paymentDate 
                        th= subscription.amount
                        th
                            a(class="subscription-edit-btn" href="/subscriptions/edit") EDIT 
                        th 
                            a(class="subscription-delete-btn" href="/subscriptions/delete") DELETE   
        else 
            h2 NO ACTIVE SUBSCRIPTION