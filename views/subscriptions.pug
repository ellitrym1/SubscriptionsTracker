include header 

.subscriptions
    .current-user 
        .user= name
        a(class="logout-btn" href="/logout") LOG OUT 
    .subscriptions-modal 
        h1 SUBSCRIPTIONS
        
            
        table 
            tr 
                th NAME 
                th PAYMENT DATE 
                th AMOUNT 
            each subscription in subscriptions 
                tr 
                    th= subscription.name 
                    th= subscription.paymentDate 
                    th= subscription.amount
            else 
                tr 
                    th No active subscriptions